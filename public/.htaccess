<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On
    RewriteBase /

    # 1. API & Webhooks -> Send to Laravel (index.php)
    # This prevents React from stealing API requests
    RewriteCond %{REQUEST_URI} ^/api [NC,OR]
    RewriteCond %{REQUEST_URI} ^/vdf_auto_fund_habukhan [NC,OR]
    RewriteCond %{REQUEST_URI} ^/cache [NC]
    RewriteRule ^ index.php [L]

    # 2. Existing Files/Dirs (Backend Assets) -> Serve Directly
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # 3. Everything Else -> Send to React (index.html)
    RewriteRule ^ index.html [L]
</IfModule>
